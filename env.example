# 🌐 環境変数設定例
# 本番環境では各プラットフォームの環境変数設定で行う

# サーバー設定
PORT=3000
NODE_ENV=production

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Base Sepolia RPC
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# ウォレット設定（本番用は新しい専用ウォレットを推奨）
PRIVATE_KEY=your_production_private_key_here

# USDC契約アドレス（Base Sepolia）
USDC_CONTRACT_ADDRESS=0x036CbD53842c5426634e7929541eC2318f3dCF7e

# スマートコントラクト（デプロイ済み）
RULE_COMMITMENT_CONTRACT=0x1234567890123456789012345678901234567890
ZKP_VERIFIER_CONTRACT=0x1234567890123456789012345678901234567890

# データベース（本番では永続化ストレージを使用）
DATABASE_PATH=./data/payment_system.db

# セキュリティ設定
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ログレベル
LOG_LEVEL=info 